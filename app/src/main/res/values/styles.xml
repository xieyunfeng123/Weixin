<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_home_radio">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textColor">@drawable/colors_radio</item>
        <item name="android:textSize">12sp</item>
        <item name="android:button">@null</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/tran</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="showPopupAnimation" parent="android:Animation">  <!--name为调用这个style动画的名字，自己设置的-->
        <item name="android:windowExitAnimation">@anim/from_top_to_buttom</item>
        <item name="android:windowEnterAnimation">@anim/from_buttom_to_top</item>
</style>

    <style name="textviewDemo">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="HomeActinbar" parent="@style/AppTheme">
        <item name="actionBarSize">50dp</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
